<div class="container-fluid mt-3">
    <span class="mr-3 h1">News Scraper</span>
    <button class="btn btn-success mr-3" id="update">Update Articles</button>
    <button class="btn btn-primary" id="myArticles">My Comments</button>
</div>

<div class="container-fluid bg-light">
    {{#each this}}
    {{#if this.title}}
    {{#if this.summary}}
    <div class="container bg-light border mt-3">
        <div class="row">
            <div class="col-12 mt-3">
                <a href="https://www.cargurus.com/Cars{{this.link}}">
                    <h4>{{this.title}}</h4>
                </a>
            </div>
            <div class="col-10">
                <p>{{this.summary}}</p>
            </div>
            <div class="col-2">
                <button class="btn btn-info comment" id={{this._id}}>Comment</button>
            </div>
            <div class="col-12" id={{this._id}}></div>
        </div>
    </div>
    {{/if}}
    {{/if}}
    {{/each}}
</div>