<div class="container-fluid mt-3">
    <span class="mr-3 h1">News Scraper</span>
    <button class="btn btn-success mr-3" id="update">Update Articles</button>
    <button class="btn btn-primary" id="myArticles">My Comments</button>
</div>

<div class="container-fluid bg-light">
    {{#each this}}
    {{#if this.title}}
    {{#if this.summary}}
    <div class="container bg-light border mt-3">
        <div class="row">
            <div class="col-12 mt-3">
                <a href="https://www.cargurus.com/Cars{{this.link}}">
                    <h4>{{this.title}}</h4>
                </a>
            </div>
            <div class="col-12">
                <p>{{this.summary}}</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <button class="btn btn-info comment" id={{this._id}} data-toggle="modal" data-target="#exampleModal">Comment</button>
                <button class="btn btn-info seeComments" id={{this._id}}>See Comments</button>
            </div>
        </div>
        <div class="row">
            <div class="col-12" id={{this._id}}></div>
        </div>
    </div>
    {{/if}}
    {{/if}}
    {{/each}}
</div>

<div class="modal" tabindex="-1" role="dialog" id="exampleModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon3">Comment:</span>
                    </div>
                    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </div>
</div>